#!/bin/bash

successful_tests=()

for i in $(ls samples/*.js)
do
    node $i
    if [[ $? -ne 0 ]]
    then
        echo "$i failed"
        exit 1
    else
        successful_tests+=($i)
    fi
done

echo

echo "Success. All tests passed:"

for t in "${successful_tests[@]}"
do
  echo "  - $t: OK"
done

echo

